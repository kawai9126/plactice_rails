<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@list,url: todolists_path,local:true do |f| %>
<div>
    <label>画像</label>
    <%= f.attachment_field:image %>
</div>
<div>
    <label>タイトル</label>
    <%= f.text_field:title %>
</div>
<div>
    <label>本文</label>
    <%= f.text_area:body %>
</div>
<div>
    <%= f.submit "投稿" %>
</div>
<% end %>