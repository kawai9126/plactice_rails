<h1>詳細</h1>
<table>
    <tr>
        <th>画像</th>
        <td><%= attachment_image_tag @list,:image,size: '100x100' %></td>
    </tr>
    <tr>
        <th>タイトル</th>
        <td><%= @list.title %></td>
    </tr>
    <tr>
        <th>本文</th>
        <td><%= @list.body %></td>
    </tr>
</table>
<%= link_to '編集', edit_todolist_path(@list.id) %>
<%= link_to "削除", todolist_path(@list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>